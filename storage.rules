rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows anyone with your Firestore database reference to view, edit,
    // and delete all data in your Firestore database. It is useful for getting
    // started, but it is configured to expire after 30 days because it
    // leaves your app open to attackers. At that time, all client
    // requests to your Firestore database will be denied.
    //
    // Make sure to write security rules for your app before that time, or else
    // all client requests to your Firestore database will be denied until you Update
    // your rules
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 12, 28);
    }
  }
}


rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGLA 1: DATOS PRIVADOS DEL USUARIO
    // Un usuario solo puede leer y escribir en su propio documento de datos.
    // Esto protege el calendario, la cadencia, los permisos, etc.
    match /user_data/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // REGLA 2: DATOS COMPARTIDOS DEL GRUPO (Peticiones, TablÃ³n, Documentos)
    // Cualquier usuario autenticado puede leer y escribir en estas secciones.
    // Esto permite que los miembros del equipo colaboren.
    match /peticiones/{peticionId} {
      allow read, write: if request.auth != null;
    }
    
    match /tablon/{fileId} {
      allow read, write: if request.auth != null;
    }

    match /documentos/{fileId} {
      allow read, write: if request.auth != null;
    }
  }
}
